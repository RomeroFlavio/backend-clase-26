doctype html
html 
    head
        title="productosTest"
        link(rel="stylesheet", href="/styles.css")
        script(src="https://code.jquery.com/jquery-3.5.1.min.js")

    body
                    
        div(class="products")
            h1(style="color:black")="Otros productos"

        a(style={color:"purple", "text-decoration":'none', "margin-right":'1em'} href="http://localhost:5000/api/")
           span Agregar nuevo producto

        a(style={color:"purple", "text-decoration":'none'} href="http://localhost:5000/api/productos")
            span Productos de lista
           
           
            div(id="cardRow")

                if products
                    each product in products
                        div(class="card")
                            img(src=product["thumbnail"] || "https://www.bicifan.uy/wp-content/uploads/2016/09/producto-sin-imagen.png" style="width:100%")
                            h2=product["title"]
                            h3(class="price")="$" + product["price"]
